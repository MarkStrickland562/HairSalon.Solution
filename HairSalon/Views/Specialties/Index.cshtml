@{
  Layout = "_Layout";
}

<div class="container-content label">
  <h1 class="h1-font">Snappy Snips!</h1>
  <h2>Our Specialties</h2>

  @if (Model.Count != 0)
  {
    <table>
      <tr class="table-header">
        <th>Specialty</th>
      </tr>
      @foreach (var specialty in Model)
      {
        <tr class="table-row">
          <td><a class="link" href="/specialties/@specialty.GetId()">@specialty.GetSpecialty()</a></td>
        </tr>
      }
    </table>
  }
  <h4><a class="link" href="/specialties/new">Add a New Specialty</a></h4>
  @if (@Model.Count != 0)
  {
    <h4><a class="link" href="/specialties/delete">Delete All Specialties</a></h4>
  }
  <h4><a class="link" href="/">Return to the Salon Foyer</a></h4>
</div>
