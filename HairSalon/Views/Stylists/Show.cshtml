@{
  Layout = "_Layout";
}

<h3>@Model["stylist"].GetName() is a talented @Model["stylist"].GetSpecialty() and was hired on @Model["stylist"].GetHireDate()</h3>

@if (@Model["clients"].Count == 0)
{
  <h3>This stylist does not yet have any clients.</h3>
}
else
{
  <h3>This Stylist has the Following Clients:</h3>

  <ol>
  @foreach (var client in @Model["clients"])
  {
    <li><a href='/stylists/@Model["stylist"].GetId()/clients/@client.GetId()'>@client.GetName()</a></li>
  }
  </ol>
}

<p><a href='/clients/new'>Add a New Client</a></p>
<p><a href='/stylists'>Return to Our Stylists</a></p>
<p><a href='/'>Return to the Salon Foyer</a></p>
