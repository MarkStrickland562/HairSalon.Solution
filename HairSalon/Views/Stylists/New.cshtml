@{
  Layout = "_Layout";
}

<div class="container-content label">
  <h1>Add a Stylist</h1>
  <form action="/stylists" method="post">
    <label for="stylistName">Stylist Name</label>
    <input id="stylistName" name="stylistName" type="text">
    <label for="stylistSpecialty">Stylist Specialty</label>
    <input id="stylistSpecialty" name="stylistSpecialty" type="text">
    <label for="stylistHireDate">Stylist Hire Date</label>
    <input id="stylistHireDate" name="stylistHireDate" type="date">
    <button type="submit" class="btn-submit">Add Stylist</button>
    </form>
  <br>
  <p><a class="link" href="/">Return to the Salon Foyer</a></p>
  <p><a class="link" href="/stylists">Back to Our Stylists</a></p>
</div>
