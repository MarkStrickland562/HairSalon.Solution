@{
  Layout = "_Layout";
}

<div class="container-content label">
  <h1>Curl Up and Dye Hair Salon</h1>
  <h2>Stylists:</h2>

  @if (Model.Count != 0)
  {
    <ul>
      @foreach (var stylist in Model)
      {
        <li><a href="/Stylists/@stylist.GetId()">@stylist.GetName()</a></li>
      }
    </ul>
  }

  <h4><a class="link" href="/Stylists/new">Add a New Stylist</a></h4>
  <h4><a class="link" href="/">Return to the Salon Foyer</a></h4>
</div>
