@{
  Layout = "_Layout";
}

<div class="container-content label">
  <h1 class="h1-font">Snappy Snips!</h1>
  <h2>Our Clients</h2>

  @if (Model.Count != 0)
  {
    <table>
      <tr class="table-header">
        <th>Client Name</th>
        <th>Gender</th>
      </tr>
      @foreach (var client in Model)
      {
        <tr class="table-row">
          <td><a class="link" href="/clients/@client.GetId()">@client.GetName()</a></td>
          <td>@client.GetGender()</td>
        </tr>
      }
    </table>
  }
  <h4><a class="link" href="/clients/new">Add a New Client</a></h4>
  <h4><a class="link" href="/">Return to the Salon Foyer</a></h4>
</div>
